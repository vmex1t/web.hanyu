  .footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .copyright {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.45);
  }

  .footer-links {
    display: flex;
    gap: 24px;
  }

  .footer-links a {
    font-size: 0.875rem;
