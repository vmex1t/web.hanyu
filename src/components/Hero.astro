<section class="hero">
  <div class="container hero-inner">
    <div class="hero-text">
      <h1>Learn Chinese,<br/>naturally.</h1>
      <p class="hero-sub">
        Master characters, tones, and vocabulary with an app built for how your brain actually learns.
      </p>
      <div class="hero-actions">
        <a href="#cta" class="btn btn-primary hero-cta">
          Join the Waitlist
        </a>
        <a href="#features" class="hero-link">
          See features
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none"><path d="M6 12l4-4-4-4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
      </div>
    </div>

    <div class="hero-phones">
      <div class="phone-mockup hero-phone-main">
        <img src="/screenshots/home-screen.webp" srcset="/screenshots/small/home-screen.webp 280w, /screenshots/home-screen.webp 560w" sizes="(max-width: 768px) 200px, 220px" alt="Hanyu app home screen" width="280" height="606" loading="eager" fetchpriority="high" />
      </div>
      <div class="phone-mockup hero-phone-side hero-phone-left">
        <img src="/screenshots/write-tab-animation.webp" srcset="/screenshots/small/write-tab-animation.webp 280w, /screenshots/write-tab-animation.webp 560w" sizes="(max-width: 768px) 160px, 180px" alt="Character writing practice" width="280" height="606" loading="eager" />
      </div>
      <div class="phone-mockup hero-phone-side hero-phone-right">
        <img src="/screenshots/dict-tab-definitions.webp" srcset="/screenshots/small/dict-tab-definitions.webp 280w, /screenshots/dict-tab-definitions.webp 560w" sizes="(max-width: 768px) 160px, 180px" alt="Dictionary definitions" width="280" height="606" loading="eager" />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding-top: clamp(48px, 6vw, 72px);
    padding-bottom: clamp(80px, 12vw, 140px);
    overflow: hidden;
  }

  .hero-inner {
    position: relative;
    display: flex;
    align-items: center;
    gap: 48px;
  }

  .hero-text {
    flex: 0 0 45%;
    max-width: 45%;
  }

  .hero h1 {
    margin-bottom: 20px;
  }

  .hero-sub {
    font-size: var(--size-body-lg);
    color: var(--color-text-secondary);
    max-width: 460px;
    margin-bottom: 36px;
  }

  .hero-actions {
    display: flex;
    align-items: center;
    gap: 24px;
    flex-wrap: wrap;
  }

  .hero-cta {
    padding: 16px 36px;
    font-size: 1.0625rem;
  }

  .hero-link {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-primary);
    transition: gap 0.2s ease;
  }

  .hero-link:hover {
    gap: 8px;
  }

  /* Phone cluster */
  .hero-phones {
    flex: 1;
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    min-height: 460px;
  }

  .hero-phone-main {
    position: relative;
    z-index: 2;
    width: 220px;
    flex-shrink: 0;
  }

  .hero-phone-side {
    position: absolute;
    width: 180px;
    top: 40px;
    opacity: 0.85;
    z-index: 1;
  }

  .hero-phone-left {
    right: calc(50% + 90px);
    transform: rotate(-6deg);
  }

  .hero-phone-right {
    left: calc(50% + 90px);
    transform: rotate(6deg);
  }

  /* ---- Tablet ---- */
  @media (max-width: 768px) {
    .hero-inner {
      flex-direction: column;
      text-align: center;
    }

    .hero-text {
      flex: none;
      max-width: 640px;
      margin-bottom: 16px;
    }

    .hero-sub {
      margin-inline: auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-phones {
      min-height: auto;
    }

    .hero-phone-main {
      width: 200px;
    }

    .hero-phone-side {
      width: 160px;
      top: 32px;
    }

    .hero-phone-left {
      right: calc(50% + 76px);
    }

    .hero-phone-right {
      left: calc(50% + 76px);
    }
  }

  /* ---- Mobile ---- */
  @media (max-width: 480px) {
    .hero-phone-side {
      display: none;
    }
  }
</style>
