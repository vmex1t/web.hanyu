---
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

const isVercel = !!process.env.VERCEL;

interface Props {
  title?: string;
  description?: string;
  jsonLd?: Record<string, unknown>;
}

const {
  title = 'Hanyu — Learn Chinese naturally with smart, modern tools',
  description = 'Hanyu is a modern Chinese language learning app with smart flashcards, character writing practice, and pronunciation tools. Join the waitlist today.',
  jsonLd,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Hanyu" />
    <meta property="og:image" content="https://hanyu.app/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Hanyu — Learn Chinese naturally. Join the waitlist today." />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://hanyu.app/og-image.png" />
    <meta name="twitter:image:alt" content="Hanyu — Learn Chinese naturally. Join the waitlist today." />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#0061FF" />

    <!-- Font: Origin (only preload the primary body weight to reduce LCP render delay) -->
    <link rel="preload" href="/fonts/origin-book.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Structured Data -->
    {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}

    <title>{title}</title>

    <!-- Vercel Analytics -->
    {isVercel && <Analytics />}
  </head>
  <body>
    <slot />
    {isVercel && <SpeedInsights />}
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
