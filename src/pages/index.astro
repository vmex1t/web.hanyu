---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Screenshots from '../components/Screenshots.astro';
import HowItWorks from '../components/HowItWorks.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "name": "Hanyu",
      "url": "https://hanyu.app",
      "description": "Hanyu is a modern Chinese language learning app with smart flashcards, character writing practice, and pronunciation tools.",
    },
    {
      "@type": "Organization",
      "name": "Hanyu",
      "url": "https://hanyu.app",
      "logo": "https://hanyu.app/favicon.svg",
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "support@hanyu.app",
        "contactType": "customer support",
      },
      "sameAs": [
        "https://www.linkedin.com/company/hanyu.app",
        "https://www.instagram.com/hanyu.app",
        "https://www.facebook.com/hanyu.app",
      ],
    },
    {
      "@type": "SoftwareApplication",
      "name": "Hanyu",
      "operatingSystem": "iOS",
      "applicationCategory": "EducationalApplication",
      "description": "AI-powered Chinese language learning app with smart flashcards, character writing practice, and pronunciation tools.",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD",
      },
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What is Hanyu?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Hanyu is your personal AI Chinese tutor that helps you master characters, tones, vocabulary, and pronunciation through smart practice. Think of it as a human tutor, but available 24/7 and far more affordable.",
          },
        },
        {
          "@type": "Question",
          "name": "Who is Hanyu for?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Hanyu is built for anyone who wants to learn Mandarin Chinese — from complete beginners to intermediate learners looking to level up. It's perfect for students, professionals, travelers, and anyone who wants to build real fluency with confidence.",
          },
        },
        {
          "@type": "Question",
          "name": "How is Hanyu different from other Chinese apps?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Most language apps focus on rote memorization or passive exercises. Hanyu helps you learn by actively practicing characters, tones, and vocabulary in context. With Hanyu, you get: smart flashcards that adapt to your level, character writing practice with stroke-order guidance, pronunciation tools for mastering tones, and a learning plan built just for you.",
          },
        },
        {
          "@type": "Question",
          "name": "How much time can I practice with Hanyu?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can practice as much as you want — there are no daily or monthly limits. Hanyu is available 24/7, so you can learn anytime that fits your schedule.",
          },
        },
        {
          "@type": "Question",
          "name": "Does Hanyu adapt to my level?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes! Hanyu tailors its content and exercises based on your current level, learning pace, and goals — so you're always challenged at the right level without feeling overwhelmed.",
          },
        },
      ],
    },
  ],
};
---

<Layout jsonLd={jsonLd}>
  <Navbar />
  <main>
    <Hero />
    <Features />
    <Screenshots />
    <HowItWorks />
    <FAQ />
    <CTA />
  </main>
  <Footer />
</Layout>

<script>
  // Scroll-reveal observer
  const reveals = document.querySelectorAll('.reveal');
  if (reveals.length) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.15, rootMargin: '0px 0px -40px 0px' }
    );
    reveals.forEach((el) => observer.observe(el));
  }
</script>
